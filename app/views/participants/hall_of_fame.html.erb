<div class="col-md-12 text-center">
  <br />
  <br />
    <% @participants.each do |participant| %>
        <div class="row">
          <div class="col-xs-3">
            <%= link_to (image_tag (participant.avatar.url)), edition_participant_path(@edition, participant).sub(/\d+\z/, participant.username) %>
          </div>
          <div class="col-xs-6">
            <p><%= link_to participant.full_name, edition_participant_path(@edition, participant).sub(/\d+\z/, participant.username) %></p>
          </div>
          <div class="col-xs-3">
            <p><%= participant.badges.count %></p>
          </div>
        </div>
    <% end %>
</div>
